# Smart Meter Simulator Configuration

# Simulation Settings
SIMULATION_INTERVAL=15  # seconds between readings
NUM_METERS=8           # number of meters to simulate
OUTPUT_FILE=./data/meter_readings.jsonl

# Service Connection Settings (optional)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
DATABASE_URL=postgresql://p2p_user:p2p_password@localhost:5432/p2p_energy_trading
TIMESCALE_URL=postgresql://timescale_user:timescale_password@localhost:5433/p2p_timeseries

# Simulation Parameters
SOLAR_PANEL_EFFICIENCY_MIN=0.85
SOLAR_PANEL_EFFICIENCY_MAX=0.95
BASE_GENERATION_MIN=3.0  # kWh
BASE_GENERATION_MAX=12.0 # kWh
BASE_CONSUMPTION_MIN=1.5 # kWh
BASE_CONSUMPTION_MAX=6.0 # kWh
NOISE_FACTOR_MIN=0.05
NOISE_FACTOR_MAX=0.15

# Weather Simulation
WEATHER_SUNNY_WEIGHT=0.4
WEATHER_PARTLY_CLOUDY_WEIGHT=0.3
