# Default values for environment variables
# Copy this to .env and customize for your environment

# =========================================================================
# Engineering Department P2P Energy Trading System
# Solana Blockchain Configuration
# =========================================================================

# Solana Blockchain Configuration
SOLANA_RPC_URL=http://localhost:8899
SOLANA_WS_URL=ws://localhost:8900
SOLANA_CLUSTER=localhost
ENGINEERING_KEYPAIR_PATH=./validator-keys/engineering-keypair.json

# Engineering Department Program IDs
REGISTRY_PROGRAM_ID=RegEngDeptEnergyP2P1234567890123456789
ENERGY_TOKEN_PROGRAM_ID=EnergyTokenEngDept1234567890123456789
TRADING_PROGRAM_ID=TradingEngDeptP2P1234567890123456789
ORACLE_PROGRAM_ID=OracleEngDeptAMI1234567890123456789
GOVERNANCE_PROGRAM_ID=GovernanceEngDeptPoA1234567890123456789


# Database Configuration
DATABASE_URL=postgresql://p2p_user:p2p_password@localhost:5432/p2p_energy_trading
TIMESCALE_URL=postgresql://timescale_user:timescale_password@localhost:5433/p2p_timeseries

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Smart Meter Simulator Configuration (Engineering Complex)
SIMULATION_INTERVAL=900  # 15 minutes
NUM_METERS=15  # Engineering Complex meters
METER_PREFIX=ENG
BUILDING_TYPE=engineering_complex
SOLAR_CAPACITY=50.0  # 50kW solar array
OUTPUT_FILE=engineering_meter_readings.jsonl

# Oracle Configuration (Engineering Department)
ORACLE_KEYPAIR_PATH=./validator-keys/oracle-keypair.json
PROCESSING_INTERVAL=900  # 15 minutes
ENGINEERING_AUTHORITY=true

# API Gateway Configuration
JWT_SECRET=your-secret-key-change-in-production
API_PORT=3000

# API Gateway Rust Service Configuration
ENVIRONMENT=development
PORT=8080
MAX_CONNECTIONS=50
REDIS_POOL_SIZE=20
REQUEST_TIMEOUT=30
RATE_LIMIT_WINDOW=60
LOG_LEVEL=info
LOG_FORMAT=json
AUDIT_LOG_ENABLED=true

# Engineering Department Authentication
ENGINEERING_API_KEY=engineering-department-api-key-2025
HMAC_SECRET=hmac-signature-secret

# Engineering Department Authority
ENGINEERING_DEPT_KEYPAIR_PATH=./validator-keys/engineering-department-authority.json

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin

# Development Configuration
NODE_ENV=development
RUST_LOG=info
